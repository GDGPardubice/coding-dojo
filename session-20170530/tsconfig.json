{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "sourceMap": true,
    "lib": [
      "es6",
      "es2016.array.include"
    ],
    "noImplicitAny": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "typeRoots": [
      "./node_modules/@types",
      "./@types"
    ],
    "baseUrl": "./",
    "paths": {
      "*": ["@types/*"]
    }
  },
  "include" :[
    "src/**/*.ts",
    "tests/**/*.ts"
  ]
}
